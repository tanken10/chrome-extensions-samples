{
  "name": "Page Redder",
  "version": "2.0",
  "description": "タブ上の拡張機能アイコンを押すと背景色が赤色になる",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "action": {
    "default_title": "Make this page red"
  },
  "manifest_version": 3
}